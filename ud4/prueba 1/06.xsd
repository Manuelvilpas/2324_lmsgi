                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="codigo" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="lenguaje" >
                                            <xs:simpleType >
                                                <xs:restriction base="xs:string">
                                                    <xs:enumeration value="java"/>
                                                    <xs:enumeration value="Python"/>
                                                    <xs:enumeration value="C++"/>
